@model ERP_Mensajeria.Models.Entrega

@{
    ViewBag.Title = "Detalles de la entrega";
}

@if (!Request.IsAuthenticated)
{
    Response.Redirect(@Url.Action("Login", "Account"));
}
else
{

    <div class="container-fluid mt-5">
        <div class="card mb-4 wow fadeIn">
            <div class="card-body d-sm-flex justify-content-between">
                <h4 class="mb-2 mb-sm-0 pt-1">
                    <span><a href="@Url.Action("Index", "Home")">Inicio</a></span>
                    <span>/</span>
                    <span><a href="@Url.Action("Index", "Entregas")">Entregas</a></span>
                    <span>/</span>
                    <span>Detalles de la entrega</span>
                </h4>
            </div>
        </div>

        <div class="card mb-4 wow fadeIn">
            <div class="card-body">
                <div>
                    <h4>Entrega existente</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.No_Paquetes)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.No_Paquetes)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Anticipada)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Anticipada)
                        </dd>

                        <dt>
                            Contacto
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Contacto.Nombre)
                        </dd>

                        <dt>
                            Empresa
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Empresa.Nombre)
                        </dd>

                        <dt>
                            Proveedor
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Proveedor.Nombre)
                        </dd>

                    </dl>
                </div>
                <br />
                <div class="form-group text-right">
                    <div class="col-md-offset-2 col-md-10">
                        <a class="btn btn-primary" href="@Url.Action("Index", "Entregas")"><i class="fa fa-arrow-left mr-1"></i> Regresar</a>
                        |
                        <a href="@Url.Action("Edit", "Entregas", new { id = Model.ID_Entrega})" class="btn btn-default"><i class="fa fa-edit ml-1"></i> Editar </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}