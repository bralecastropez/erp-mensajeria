@model ERP_Mensajeria.Models.SolicitudProveedor

@{
    ViewBag.Title = "Detalle de la solicitud del proveedor";
}
@if (!Request.IsAuthenticated)
{
    Response.Redirect(@Url.Action("Login", "Account"));
}
else
{

    <div class="container-fluid mt-5">
